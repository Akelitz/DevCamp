extends layout

block content

    .container
        h1 Report an Outage
        p Welcome to the CP&amp;L outage reporting tool. From here you can view all reported outages via the dashboard screen, or report a new outage. Our technicians will address outages as soon as possible.
        
        .row
            
            form

                // Left Column
                .col-sm-6
                    .form-group
                        label(for='description') Description
                        textarea#description.form-control(rows='3')
                    .form-group
                        label(for='addressStreet') Street
                        input#addressStreet.form-control(type='text', placeholder='255 W. Elm Street')
                    .form-group
                        label(for='addressCity') City
                        input#addressCity.form-control(type='text', placeholder='Springfield')
                    
                    .row
                        .col-xs-6
                            .form-group
                            label(for='addressState') State
                            input#addressState.form-control(type='text', placeholder='TX')
                        .col-xs-6
                            .form-group
                            label(for='addressZip') Zip
                            input#addressZip.form-control(type='number', placeholder='90210')
                    
                    .form-group
                        label(for='firstName') First Name
                        input#firstName.form-control(type='text', placeholder='Jane')
                    .form-group
                        label(for='lastName') Last Name
                        input#lastName.form-control(type='text', placeholder='Doe')
                    .form-group
                        label(for='phone') Phone Number
                        input#phone.form-control(type='tel', placeholder='+1 (417) 444-4444')
                    .checkbox
                        label
                            input(type='checkbox')
                            |  Emergency
                    button.btn.btn-primary(type='submit') Submit
                    button.btn.btn-danger(type='submit') Cancel

                // Right Column
                .col-sm-6
                    .form-group.well.well-lg
                        label(for='image') Image of the Outage
                        input#image.form-control(type='file')
